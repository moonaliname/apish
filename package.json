{
  "name": "apish",
  "description": "Application for mocking API, using swagger.json",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "packages/entry-point.js",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "typecheck": "npm run typecheck -ws --if-present"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "4.0.1",
    "@playwright/test": "^1.48.2",
    "@types/node": "22.9.0",
    "electron": "33.1.0",
    "electron-builder": "^26.0.0-alpha.5",
    "glob": "11.0.0",
    "globals": "15.12.0",
    "playwright": "1.48.2"
  },
  "dependencies": {
    "@apish/main": "*"
  }
}
